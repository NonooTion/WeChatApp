<view class="container">
  <!-- 背景图片 -->
  <image class="background_image" src="/images/background.png" />

  <!-- 标题区域 -->
  <view class="header">
    <text class="title">校园助手</text>
    <text class="subtitle">创建您的校园助手账号</text>
  </view>

  <!-- 注册表单区域 -->
  <view class="login-form">
    <!-- 用户名输入框 -->
    <view class="input-group">
      <image class="input-icon" src="/images/user_icon.png" />
      <input 
        class="input" 
        type="text" 
        placeholder="请输入用户名" 
        bindinput="onUsernameInput"
        
      ></input>
    </view>

    <!-- 手机号输入框 -->
    <view class="input-group">
      <image class="input-icon" src="/images/phone_icon.png" />
      <input 
        class="input" 
        type="text" 
        placeholder="请输入手机号" 
        bindinput="onContactInput"
      />
    </view>

    <!-- 密码输入框 -->
    <view class="input-group">
      <image class="input-icon" src="/images/password_icon.png" />
      <input 
        class="input" 
        type="password" 
        placeholder="请输入密码" 
        bindinput="onPasswordInput"
      />
    </view>

    <!-- 确认密码输入框 -->
    <view class="input-group">
      <image class="input-icon" src="/images/password_icon.png" />
      <input 
        class="input" 
        type="password" 
        placeholder="请确认密码" 
        bindinput="onConfirmPasswordInput"
      />
    </view>

    <!-- 注册按钮 -->
    <button 
      class="login-btn" 
      bindtap="onRegister"
      hover-class="login-btn-hover"
    >
      注册
    </button>

    <!-- 底部链接 -->
    <view class="bottom-links">
      <text class="link" bindtap="navigateToLogin">已有账号？去登录</text>
    </view>
  </view>
</view>