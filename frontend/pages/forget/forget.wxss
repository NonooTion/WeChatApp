/* 忘记密码页面样式 */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.background_image {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 100%;
  z-index: -999;
}

/* 标题区域样式 */
.header {
  width: 100%;
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1296db;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 忘记密码表单区域样式 */
.login-form {
  width: 100%;
  max-width: 600rpx;
  background: linear-gradient(135deg, #e6f7ff 0%, #ffffff 100%);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 70%;
}

/* 输入框组样式 */
.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
  padding-bottom: 20rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

/* 提交按钮样式 */
.login-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(90deg, #1296db, #1e88e5);
  border-radius: 45rpx;
  color: white;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.login-btn-hover {
  background: linear-gradient(90deg, #0d82c2, #1a75c2);
}

/* 底部链接样式 */
.bottom-links {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.link {
  font-size: 28rpx;
  color: #1296db;
  text-decoration: none;
}

.search-box {
  width: 100%;
  background-color: #ffffff;
  padding: 10rpx 0;
}

.tabs-box {
  width: 100%;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.item-list {
  height: calc(100vh - 200rpx);
  padding: 0 20rpx;
}

.item-card {
  width: 88%;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-type {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.item-type.lost {
  color: #ff4d4f;
  background-color: rgba(255, 77, 79, 0.1);
}

.item-type.found {
  color: #52c41a;
  background-color: rgba(82, 196, 26, 0.1);
}

.item-time {
  font-size: 24rpx;
  color: #999999;
}

.item-content {
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

.item-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.item-location {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
  display: block;
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

.item-author {
  display: flex;
  align-items: center;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.item-image image {
  width: 100%;
  height: 100%;
}

.loading-more, .no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999999;
  font-size: 24rpx;
}

.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1296db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.3);
}

.fab-icon {
  color: #ffffff;
  font-size: 48rpx;
}

.action-sheet {
  padding: 20rpx 0;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333333;
}

.action-item van-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.publish-popup {
  padding: 32rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.popup-close {
  font-size: 36rpx;
  color: #999999;
  padding: 8rpx;
}

.popup-content {
  padding: 0 20rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
}

.image-upload {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.upload-icon {
  font-size: 48rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin: 0 12rpx;
}

.btn-default {
  background-color: #f5f5f5;
  color: #666666;
}

.btn-primary {
  background-color: #1296db;
  color: #ffffff;
}