.container {
  width: 100%;
  height: 100vh;
  background-color: #f5f7fa;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}

.back-button {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 99;
  padding: 10rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.topic-container {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.topic-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.topic-type {
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.normal {
  background-color: #e6f7ff;
  color: #1296db;
}

.anonymous {
  background-color: #fff0e6;
  color: #ff9900;
}

.topic-time {
  font-size: 24rpx;
  color: #999;
}

.topic-content {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.topic-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.topic-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.topic-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.topic-author {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.topic-stats {
  display: flex;
  align-items: center;
}

.like-btn {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #999;
  transition: all 0.3s;
  padding: 6rpx 12rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
}

.like-btn.liked {
  color: #ff4757;
  background-color: #fff0f0;
}

.like-btn text {
  margin-left: 4rpx;
}

.comment-count {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 12rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
}

.comments-container {
  flex: 1;
  width: 100%;
  overflow-y: auto;
  padding: 0 10rpx;
}

.comments-header {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  padding: 0 10rpx;
}

.comments-list {
  width: 100%;
}

.comment-item {
  display: flex;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.comment-content {
  flex: 1;
  margin-left: 20rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.commenter {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
  word-break: break-all;
  white-space: pre-wrap;
}

.comment-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4757;
  padding: 6rpx 12rpx;
  border-radius: 30rpx;
  background-color: #fff0f0;
}

/* 调整头像样式 */
.comment-item .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.comment-input {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
  background-color: white;
  border-radius: 10rpx;
  margin-top: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.comment-text {
  flex: 1;
  height: 60rpx;
  border: 1rpx solid #eee;
  border-radius: 30rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #f8f8f8;
}

.send-btn {
  width: 120rpx;
  height: 60rpx;
  background-color: #1296db;
  color: white;
  border: none;
  border-radius: 30rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(18, 150, 219, 0.3);
  transition: all 0.3s;
}

.send-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 3rpx rgba(18, 150, 219, 0.2);
}

.popup-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.popup {
  width: 80%;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.popup-header text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.submit-btn, .cancel-btn {
  width: 48%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.submit-btn {
  background-color: #1296db;
  color: white;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}