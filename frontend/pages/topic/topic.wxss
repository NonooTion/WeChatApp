.container {
  height: 100vh;
  display: inline;
  background-color: #f5f5f5;
}

.search-box {
  width: 100%;
  background-color: #ffffff;
  padding: 10rpx 0;
}

.tabs-box {
  width: 100%;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.topic-list {
  height: calc(100vh - 200rpx);
  padding: 0 20rpx;
}

.topic-card {
  width: 88%;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.topic-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.topic-type {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.topic-type.normal {
  color: #1296db;
  background-color: rgba(18, 150, 219, 0.1);
}

.topic-type.anonymous {
  color: #ff9800;
  background-color: rgba(255, 152, 0, 0.1);
}

.topic-time {
  font-size: 24rpx;
  color: #999999;
}

.topic-content {
  margin-bottom: 16rpx;
}

.topic-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

.topic-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.topic-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

.topic-author {
  display: flex;
  align-items: center;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.topic-stats {
  display: flex;
  align-items: center;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  color: #999999;
  font-size: 24rpx;
}

.stat-item van-icon {
  margin-right: 4rpx;
}

.loading-more, .no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999999;
  font-size: 24rpx;
}

.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1296db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.3);
}

.fab-icon {
  color: #ffffff;
  font-size: 48rpx;
}

.action-sheet {
  padding: 20rpx 0;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333333;
}

.action-item van-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.publish-popup {
  padding: 32rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.popup-close {
  font-size: 36rpx;
  color: #999999;
  padding: 8rpx;
}

.popup-content {
  padding: 0 20rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin: 0 12rpx;
}

.btn-default {
  background-color: #f5f5f5;
  color: #666666;
}

.btn-primary {
  background-color: #1296db;
  color: #ffffff;
}