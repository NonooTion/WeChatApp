.container {
  width: 100%;
  height: 100vh;
  background-color: #f0f2f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 标题区域样式 */
.header {
  width: 100%;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1296db;
  text-align: center;
}

/* 表单区域样式 */
.todo-form {
  width: 100%;
  height: 100vh;
  margin-top: 40rpx;
}

.todo-input {
  font-size: 32rpx;
}

/* 按钮样式 */
.submit-button {
  margin-top: 60rpx;
}

.form-submit-btn {
  background: linear-gradient(135deg, #1296db 0%, #007bff 100%);
  border: none;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}

/* 底部信息样式 */
.footer {
  margin-top: 30rpx;
  color: #999;
  font-size: 24rpx;
}