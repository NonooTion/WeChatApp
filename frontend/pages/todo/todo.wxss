.container {
  width: 100%;
  height: 100vh;
  background-color: #f0f2f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 标题区域样式 */
.header {
  width: 100%;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1296db;
}

.button-bar {
  width: 100%;
  margin-bottom: 15rpx;
}

.add-button {
  margin-left: 550rpx;
}

/* 待办事项列表样式 */
.todo-list {
  width: 100%;
  flex: 1; /* 占据剩余空间 */
}

.todo-scroll {
  height: 100%; /* 占据父容器的全部高度 */
}

.todo-item {
  background: linear-gradient(135deg, #e6f7ff 0%, #ffffff 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.08);
  opacity: 0;
  transform: scale(0.8);
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.todo-content {
  flex: 1;
}

.todo-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.todo-priority {
  font-size: 24rpx;
  color: #666;
}

.todo-remindTime {
  font-size: 10rpx;
  color: #666;
}

.todo-actions {
  width: 300rpx;
  display: flex;
}

.edit-btn, .delete-btn {
  padding: 10rpx 40rpx;
  margin-left: 10rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.edit-btn {
  background-color: #1296db;
  color: white;
}

.delete-btn {
  background-color: #ff4757;
  color: white;
}

/* 底部信息样式 */
.footer {
  margin-top: 30rpx;
  color: #999;
  font-size: 24rpx;
}